<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    >


    <LinearLayout style="@style/linearLayoutCabecera">
        <TextView style="@style/textViewCabecera" android:text="Saint Michel"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="100dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carga en el vehÃ­culo"
                style="@style/texto"
                android:textSize="30dp"
                android:layout_marginBottom="30dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidones 20L: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewBidones20L"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidones 20L Vacios: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewBidones20LVacios"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidones 12L: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewBidones12L"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidones 12L Vacios: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewBidones12LVacios"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidones 10L: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewBidones10L"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidones 8L: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewBidones8L"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bidones 5L: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewBidones5L"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pack Botellas 2L: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewPackBotellas2L"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pack Botellas 500mL: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewPackBotellas500mL"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso Total: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewPesoTotal"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vertedores: "
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewVertedores"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dispensers"
                style="@style/textoDatosCargamento"
                android:id="@+id/aCargamentoTextViewDispensers"
                android:layout_marginBottom="20dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="50dp"
                android:layout_marginTop="30dp"
                >
                <Button
                    android:id="@+id/aCargamentoButtonCargas"
                    style="@style/button"
                    android:text="Cargas"
                    android:layout_marginBottom="50dp"
                    />

                <Button
                    android:id="@+id/aCargamentoButtonDescargas"
                    android:text="Descargas"
                    style="@style/button"
                    android:layout_marginBottom="50dp"
                    />

                <Button
                    android:id="@+id/aCargamentoButtonRetornar"
                    style="@style/buttonRetornar"
                    android:text="Retornar"
                    android:layout_marginBottom="50dp"
                    />

            </LinearLayout>




        </LinearLayout>




    </ScrollView>















</LinearLayout>