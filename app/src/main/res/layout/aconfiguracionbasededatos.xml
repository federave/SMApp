<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:background="@drawable/fondo"
    >


    <LinearLayout style="@style/linearLayoutCabecera">
        <TextView style="@style/textViewCabecera" android:text="Saint Michel"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id ="@+id/aDiaRepartoDiaCargado"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="80dp"
        android:paddingHorizontal="20dp"
        >

        <Button
            android:id="@+id/aConfiguracionBaseDeDatosButtonActualizarBD"
            android:text="Actualizar Base De Datos"
            style="@style/button"
            android:layout_marginBottom="60dp"
            />
        <Button
            android:id="@+id/aConfiguracionBaseDeDatosButtonActualizarClientes"
            android:text="Actualizar Clientes"
            style="@style/button"
            android:layout_marginBottom="60dp"
            />
        <Button
            android:id="@+id/aConfiguracionBaseDeDatosButtonEliminarDiaRepartidor"
            android:text="Eliminar Día"
            style="@style/button"
            android:layout_marginBottom="60dp"
            />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/aConfiguracionBaseDeDatosTextViewInfoBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de Días en BD: "
                style="@style/texto"
                android:textSize="24dp"
                android:textAlignment="center"
                />

        </LinearLayout>


        <Button
            android:layout_marginBottom="50dp"
            android:id="@+id/aConfiguracionBaseDeDatosButtonVaciarBD"
            android:text="Vaciar Base De Datos"
            style="@style/button"

            />












        <Button
            android:layout_marginBottom="40dp"
            android:id="@+id/aConfiguracionBaseDeDatosButtonRetornar"
            android:text="Retornar"
            style="@style/buttonRetornar"
            />

    </LinearLayout>

    </ScrollView>


</LinearLayout>

