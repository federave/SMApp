                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alquileres 8 Bidones"
                        style="@style/textoDatosCargamento"
                        android:layout_marginBottom="30dp"
                        android:textSize="26dp"
