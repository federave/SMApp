                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/aPagoAlquilerLinearLayoutAlquileres12BidonesPagos"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinero: "
                            style="@style/textoDatosCargamento"
                            android:id="@+id/aPagoAlquilerTextViewAlquileres12BidonesDinero"
                            android:layout_marginBottom="20dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >


                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Alquileres a pagar: "
                                style="@style/textoDatosCargamento"
