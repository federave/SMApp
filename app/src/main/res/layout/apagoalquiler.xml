<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/fondo"
    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:gravity="center"
        >
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="vertical"
        android:gravity="center"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                style="@style/textViewCabecera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saint Michel"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center"
            >


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="5dp"
                    android:gravity="center"
                    >



                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pagos Alquileres"
                            style="@style/texto"
                            android:textSize="30dp"
                            android:layout_marginBottom="60dp"
                            android:textAlignment="center"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/aPagoAlquilerLinearLayoutAlquileres6Bidones"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/fondoborde"
                            android:paddingVertical="20dp"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquileres 6 Bidones"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="30dp"
                                android:textSize="26dp"
                                android:textAlignment="center"

                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 6 Bidones Pagados: "
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres6BidonesPagados"
                                android:textSize="20dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 6 Bidones Pago Completo"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres6BidonesPagoCompleto"
                                android:textSize="20dp"

                                />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/aPagoAlquilerLinearLayoutAlquileres6BidonesPagos"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dinero: "
                                    style="@style/textoDatosCargamento"
                                    android:id="@+id/aPagoAlquilerTextViewAlquileres6BidonesDinero"
                                    android:layout_marginBottom="20dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    >


                                    <TextView
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:text="Alquileres a pagar"
                                        style="@style/textoDatosCargamento"
                                        android:textAlignment="center"
                                        />
                                    <EditText
                                        android:id="@+id/aPagoAlquilerEditTextAlquiler6Bidones"
                                        style="@style/Widget.AppCompat.EditText"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/background_light"
                                        android:textSize="24dp"
                                        android:inputType="number"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Max: "
                                        style="@style/textoDatosCargamento"
                                        android:id="@+id/aPagoAlquilerTextViewAlquileres6BidonesMaximo"
                                        android:textAlignment="center"
                                        android:layout_marginTop="10dp"

                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/aPagoAlquilerLinearLayoutAlquileres8Bidones"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/fondoborde"
                            android:paddingVertical="20dp"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquileres 8 Bidones"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="30dp"
                                android:textSize="26dp"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 8 Bidones Pagados: "
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres8BidonesPagados"
                                android:textSize="22dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 8 Bidones Pago Completo"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres8BidonesPagoCompleto"
                                android:textSize="22dp"

                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/aPagoAlquilerLinearLayoutAlquileres8BidonesPagos"
                                android:gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dinero: "
                                    style="@style/textoDatosCargamento"
                                    android:id="@+id/aPagoAlquilerTextViewAlquileres8BidonesDinero"
                                    android:layout_marginBottom="20dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    >


                                    <TextView
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:text="Alquileres a pagar"
                                        style="@style/textoDatosCargamento"
                                        />
                                    <EditText
                                        android:id="@+id/aPagoAlquilerEditTextAlquiler8Bidones"
                                        style="@style/Widget.AppCompat.EditText"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/background_light"
                                        android:textSize="24dp"
                                        android:inputType="number"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Max: "
                                        style="@style/textoDatosCargamento"
                                        android:id="@+id/aPagoAlquilerTextViewAlquileres8BidonesMaximo"
                                        android:textAlignment="center"
                                        android:layout_marginTop="10dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>











                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/aPagoAlquilerLinearLayoutAlquileres10Bidones"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/fondoborde"
                            android:paddingVertical="20dp"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquileres 10 Bidones"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="30dp"
                                android:textSize="26dp"
                                android:textAlignment="center"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 10 Bidones Pagados: "
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres10BidonesPagados"
                                android:textSize="22dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 10 Bidones Pago Completo"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres10BidonesPagoCompleto"
                                android:textSize="22dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/aPagoAlquilerLinearLayoutAlquileres10BidonesPagos"
                                android:gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dinero: "
                                    style="@style/textoDatosCargamento"
                                    android:id="@+id/aPagoAlquilerTextViewAlquileres10BidonesDinero"
                                    android:layout_marginBottom="20dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"

                                    >


                                    <TextView
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:text="Alquileres a pagar"
                                        style="@style/textoDatosCargamento"
                                        android:textAlignment="center"
                                        />
                                    <EditText
                                        android:id="@+id/aPagoAlquilerEditTextAlquiler10Bidones"
                                        style="@style/Widget.AppCompat.EditText"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/background_light"
                                        android:textSize="24dp"
                                        android:inputType="number"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Max: "
                                        style="@style/textoDatosCargamento"
                                        android:id="@+id/aPagoAlquilerTextViewAlquileres10BidonesMaximo"
                                        android:textAlignment="center"
                                        android:layout_marginTop="10dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

















                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/aPagoAlquilerLinearLayoutAlquileres12Bidones"
                            android:layout_marginBottom="40dp"
                            android:background="@drawable/fondoborde"
                            android:paddingVertical="20dp"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquileres 12 Bidones"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="30dp"
                                android:textSize="26dp"
                                android:textAlignment="center"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 12 Bidones Pagados: "
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres12BidonesPagados"
                                android:textSize="22dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alquiler 12 Bidones Pago Completo"
                                style="@style/textoDatosCargamento"
                                android:layout_marginBottom="20dp"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres12BidonesPagoCompleto"
                                android:textSize="22dp"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/aPagoAlquilerLinearLayoutAlquileres12BidonesPagos"
                                android:gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dinero: "
                                    style="@style/textoDatosCargamento"
                                    android:id="@+id/aPagoAlquilerTextViewAlquileres12BidonesDinero"
                                    android:layout_marginBottom="20dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    >


                                    <TextView
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:text="Alquileres a pagar"
                                        style="@style/textoDatosCargamento"
                                        android:textAlignment="center"
                                        />
                                    <EditText
                                        android:id="@+id/aPagoAlquilerEditTextAlquiler12Bidones"
                                        style="@style/Widget.AppCompat.EditText"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/background_light"
                                        android:textSize="24dp"
                                        android:inputType="number"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Max: "
                                        style="@style/textoDatosCargamento"
                                        android:id="@+id/aPagoAlquilerTextViewAlquileres12BidonesMaximo"
                                        android:textAlignment="center"
                                        android:layout_marginTop="10dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>













                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="50dp"
                        >
                        <Button
                            android:id="@+id/aPagoAlquilerButtonGuardar"
                            style="@style/button"
                            android:text="Guardar"
                            android:layout_marginBottom="50dp"
                            />
                        <Button
                            android:id="@+id/aPagoAlquilerButtonBorrarDatos"
                            style="@style/button"
                            android:text="Borrar Datos"
                            android:layout_marginBottom="50dp"
                            />


                        <Button
                            android:id="@+id/aPagoAlquilerButtonRetornar"
                            style="@style/buttonRetornar"
                            android:text="Retornar"
                            android:layout_marginBottom="50dp"
                            />
                    </LinearLayout>








                </LinearLayout>

            </ScrollView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:gravity="center"
            >
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:gravity="center"
        >
    </LinearLayout>


</LinearLayout>

