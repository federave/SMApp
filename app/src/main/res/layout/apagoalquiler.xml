                            style="@style/textoDatosCargamento"
                            android:id="@+id/aPagoAlquilerTextViewAlquileres10BidonesDinero"
                            android:layout_marginBottom="20dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >


                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Alquileres a pagar: "
                                style="@style/textoDatosCargamento"
                                />
                            <EditText
                                android:id="@+id/aPagoAlquilerEditTextAlquiler10Bidones"
                                style="@style/Widget.AppCompat.EditText"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@android:color/background_light"
                                android:textSize="24dp"
                                android:inputType="number"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Max: "
                                style="@style/textoDatosCargamento"
                                android:id="@+id/aPagoAlquilerTextViewAlquileres10BidonesMaximo"
                                android:layout_marginLeft="20dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

















                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/aPagoAlquilerLinearLayoutAlquileres12Bidones"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/fondoborde"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alquileres 12 Bidones"
                        style="@style/textoDatosCargamento"
