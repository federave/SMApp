                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="40dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venta Productos / Deuda Productos"
                    style="@style/texto"
                    android:textSize="30dp"
                    android:id="@+id/aRepartoProductosTextViewTitulo"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp"
                android:paddingHorizontal="50dp"
                >
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Dinero: "
                    style="@style/textoDatosCargamento"
                    android:textAlignment="center"
                    android:id="@+id/aRepartoProductosTextViewDinero"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp"
                android:paddingHorizontal="50dp"
                android:id="@+id/aRepartoProductosLinearLayoutBidones20L"
                >
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="Bidones 20L: "
                    style="@style/textoDatosCargamento"
                    android:textAlignment="center"
                    />
                <EditText
                    android:id="@+id/aRepartoProductosEditTextBidones20L"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="24dp"
                    android:inputType="number"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp"
                android:paddingHorizontal="50dp"
