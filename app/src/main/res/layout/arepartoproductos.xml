                        style="@style/textoDatosCargamento"
                        android:textAlignment="center"

                        />
                    <EditText
                        android:id="@+id/aRepartoProductosEditTextPackBotellas2LBonificados"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="24dp"
                        android:inputType="number"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:paddingHorizontal="50dp"
                    >
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Pack Botellas 500mL Bonificados: "
                        style="@style/textoDatosCargamento"
                        android:textAlignment="center"

                        />
                    <EditText
                        android:id="@+id/aRepartoProductosEditTextPackBotellas500mLBonificados"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="24dp"
                        android:inputType="number"
                        />

                </LinearLayout>

        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="120dp"
                android:layout_marginTop="50dp"
                >
                <Button
                    android:id="@+id/aRepartoProductosButtonGuardar"
                    style="@style/button"
                    android:text="Guardar Venta/Deuda"
                    android:layout_marginBottom="50dp"
                    />
                <Button
                    android:id="@+id/aRepartoProductosButtonBorrarDatos"
                    style="@style/button"
                    android:text="Borrar Datos"
                    android:layout_marginBottom="50dp"
                    />
                <Button
                    android:id="@+id/aRepartoProductosButtonRetornar"
                    style="@style/buttonRetornar"
                    android:text="Retornar"
                    android:layout_marginBottom="50dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>