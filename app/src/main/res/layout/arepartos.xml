<LinearLayout style="@style/linearLayoutCabecera"
    android:layout_weight="1">
    <TextView style="@style/textViewCabecera" android:text="Saint Michel"/>
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/aDiaRepartoCargarDia"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:gravity="center"
    android:layout_weight="10"
    android:paddingHorizontal="5dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".4"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#00000F"
            android:gravity="center"
            android:hint="Buscar Cliente"
            android:id="@+id/aRepartoEditTextBuscar"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="18"
        android:paddingVertical="5dp"

        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aRepartosListViewRepartos"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight=".3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >
        <Button
            android:id="@+id/aRepartosButtonRetornar"
            style="@style/buttonRetornar"
            android:text="Retornar"
            />

    </LinearLayout>

</LinearLayout>



</LinearLayout>
