<style name="imageViewRightCabecera">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/goup</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginRight">20dp</item>


</style>

<style name="button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">80dp</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:background">@drawable/boton</item>
    <item name="android:textSize">24dp</item>
</style>

<style name="buttonRetornar" parent="button" >
    <item name="android:background">@drawable/botonsalir</item>
</style>

<style name="buttonEnviarDia" parent="button" >
    <item name="android:background">@drawable/botonenviardia</item>
</style>




<style name="MyDatePicker" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textColorPrimary">@color/colorAccent</item>
</style>

<style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorControlNormal">@android:color/white</item>
    <item name="colorControlActivated">@color/colorAccent</item>
    <item name="textColorAlertDialogListItem">@android:color/white</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textSize">22dp</item>
    <item name="android:textColorPrimary">@android:color/white</item>
    <item name="android:windowBackground">@drawable/fondodatepicker</item>
</style>



</resources>
